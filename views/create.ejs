<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>

    <body>

        <%- include('partials/header') %>

            <main class="mainCreate">
                <h3>Alta de Producto</h3>
                <section class="ultima-visita">
    
                        <form action="/products/store" method="POST" enctype="multipart/form-data">

                            <div class="field">
                                <label for="name">Nombre</label>
                                <div class="control1">
                                    <input type="text" name="name" value="<%= locals.oldData ? oldData.name : null %>">
                                    <% if(locals.errors && errors.name){ %>
                                        <div><%= errors.name.msg %></div>
                                    <% } %>
                                </div>
                             
                            </div>

                            <div class="field">
                                <label for="image">Imagen</label>
                                <div class="control">
                                    <input type="file" name="image" value="<%= locals.oldData ? oldData.image : null %>">
                                </div>
                            </div>

                            <div class="field">
                                <label for="price">Precio</label>
                                <div class="control2">
                                    <input type="text" name="price" value="<%= locals.oldData ? oldData.price : null %>">
                                    <% if(locals.errors && errors.price){ %>
                                        <div><%= errors.price.msg %></div>
                                    <% } %>
                                </div>
                            </div>

                            <div class="field">
                                <label for="descuento">descuento</label>
                                <div class="control3">
                                   
                                    <input type="text" name="descuento" value="<%= locals.oldData ? oldData.descuento : null %>">
                                    <% if(locals.errors && errors.descuento){ %>
                                        <div><%= errors.descuento.msg %></div>
                                    <% } %>
                                </div>
                            </div>


                            <div class="field">
                                <div class="control">
                                    <button type="submit">Crear producto</button>
                                </div>
                            </div>
                        </form>


                    </div>
                </section>

            </main>
            <%- include('partials/footer') %>

    </body>

</html>
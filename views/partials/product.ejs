<article id="separacion">
    <img src="/images/<%= product.image %>" width="100%" alt="Cafetera" class="product_img">
    <article class="caja"> 
        <i class="fas fa-truck"></i>
        <div class="precioDescuento">
            <p class="precios">
                <%= product.price %>
            </p>
            <p class="descuentos">
                <%= product.descuento %> % off
            </p>
        </div>
        <h4 class="descripciones">
            <%= product.name %>
        </h4>
    </article>
</article>